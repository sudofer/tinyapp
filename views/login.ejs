<form action="/login" method="POST">
  <div class="container">
    <h1>Login</h1>
    <p>Please log in!</p>
    <hr />

    <label for="email"><b>Email</b></label>
    <input
      type="email"
      placeholder="Enter Email"
      name="email"
      id="email"
      required
    />

    <label for="psw"><b>Password</b></label>
    <input
      type="password"
      placeholder="Enter Password"
      name="password"
      id="psw"
      required
    />

    <button type="submit" class="registerbtn">Login</button>
  </div>
</form>
